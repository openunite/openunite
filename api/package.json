{
  "name": "openunite-api",
  "version": "0.1.0",
  "private": true,
  "main": "index.js",
  "scripts": {
    "start": "nodemon",
    "tdd": "mocha --opts test/tdd.opts",
    "tdd+debug": "mocha --opts test/tdd.opts --inspect-brk",
    "test": "mocha --opts test/default.opts",
    "lint": "eslint \"**/*.ts\"",
    "lint+fix": "eslint --fix \"**/*.ts\"",
    "format": "prettier --write \"**/*.{js,ts,json}\"",
    "db:migrate": "ts-node ./db/migration_cli.ts --migrate",
    "db:reset": "ts-node ./db/migration_cli.ts --reset"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "npm run lint+fix",
      "npm run format",
      "git add"
    ],
    "*.json": [
      "npm run format",
      "git add"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es6": true,
      "mocha": true
    },
    "parser": "typescript-eslint-parser",
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "plugins": [
      "typescript"
    ],
    "rules": {
      "no-unused-vars": "off",
      "no-undef": "off"
    }
  },
  "devDependencies": {
    "@types/jsonwebtoken": "8.3.0",
    "@types/koa": "2.0.47",
    "@types/koa-bodyparser": "4.2.1",
    "@types/koa-router": "7.0.35",
    "@types/mocha": "5.2.5",
    "@types/node": "10.12.17",
    "@types/supertest": "2.0.7",
    "eslint": "5.10.0",
    "eslint-config-prettier": "3.3.0",
    "eslint-plugin-typescript": "0.14.0",
    "husky": "1.3.0",
    "lint-staged": "8.1.0",
    "mocha": "5.2.0",
    "node-docker-api": "1.1.22",
    "nodemon": "1.18.9",
    "postgres-migrations": "2.0.3",
    "prettier": "1.15.3",
    "should": "13.2.3",
    "supertest": "3.3.0",
    "testdouble": "3.9.1",
    "tsconfig-paths": "3.7.0",
    "typescript": "3.2.2",
    "typescript-eslint-parser": "21.0.2"
  },
  "dependencies": {
    "@koa/cors": "2",
    "@types/joi": "14.0.1",
    "joi": "14.3.0",
    "jsonwebtoken": "8.4.0",
    "koa": "2.6.2",
    "koa-bodyparser": "4.2.1",
    "koa-router": "7.4.0",
    "ts-node": "7.0.1",
    "typeorm": "0.2.9"
  }
}
