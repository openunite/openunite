{
  "name": "openunite-api",
  "version": "0.1.0",
  "private": true,
  "main": "index.js",
  "scripts": {
    "start": "nodemon",
    "tdd": "mocha --opts test/tdd.opts",
    "test": "mocha --opts test/default.opts",
    "lint": "eslint \"**/*.ts\"",
    "lint+fix": "eslint --fix \"**/*.ts\"",
    "format": "prettier --write \"**/*.{js,ts,json}\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "npm run lint+fix",
      "npm run format",
      "git add"
    ],
    "*.{json}": [
      "npm run format",
      "git add"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es6": true,
      "mocha": true
    },
    "parser": "typescript-eslint-parser",
    "extends": [
      "eslint:recommended",
      "prettier"
    ]
  },
  "devDependencies": {
    "@types/koa": "^2.0.47",
    "@types/koa-router": "^7.0.35",
    "@types/mocha": "5.2.5",
    "@types/node": "10.12.17",
    "eslint": "5.10.0",
    "eslint-config-prettier": "3.3.0",
    "husky": "1.3.0",
    "lint-staged": "8.1.0",
    "mocha": "5.2.0",
    "nodemon": "^1.18.9",
    "prettier": "1.15.3",
    "testdouble": "3.9.1",
    "ts-node": "^7.0.1",
    "typescript": "^3.2.2",
    "typescript-eslint-parser": "21.0.2"
  },
  "dependencies": {
    "koa": "^2.6.2",
    "koa-router": "^7.4.0"
  }
}
